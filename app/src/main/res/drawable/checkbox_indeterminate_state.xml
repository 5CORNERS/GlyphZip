<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#67EA94"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_check" android:gravity="center"/>
        </layer-list>
    </item>
    <item android:state_checked="false" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="2dp" android:color="#67EA94"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#67EA94"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_remove" android:gravity="center"/>
        </layer-list>
    </item>
</selector>
